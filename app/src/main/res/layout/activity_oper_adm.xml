<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OperAdmActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="top"
                android:background="@color/colorCyanBlue"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnatras"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/atras"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorStandardBlack"
                    android:textSize="28dp"
                    android:text="@string/RC"/>
            </LinearLayout>
            <EditText
                android:id="@+id/txtloca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/local" />


            <EditText
                android:id="@+id/txtruc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/ruc"
                android:inputType="number"/>

            <EditText
                android:id="@+id/txtdni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/dni"
                android:inputType="number"/>

            <EditText
                android:id="@+id/txtcell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/cell"
                android:inputType="number"/>



            <EditText
                android:id="@+id/txtdire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/direcc" />

            <EditText
                android:id="@+id/txtsit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/sitios"
                android:inputType="number"/>

            <EditText
                android:id="@+id/txthora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkBlue"
                android:hint="@string/hora"
                android:inputType="numberDecimal"/>
            <TextView
                android:id="@+id/txtgeo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorDarkBlue"
                android:textColorHint="@color/colorDarkBlue"
                android:hint="@string/geo" />
            <Button
                android:id="@+id/btnubi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_ubica"/>

            <Button
                android:id="@+id/btnguar"
                android:layout_width="match_parent"
                android:textColor="@color/colorA"
                android:layout_height="match_parent"
                android:layout_marginTop="145dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonusu"
                android:text="@string/guardar" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>